<mvc:View

   controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
   <App>
      <pages>
         <Page title="{i18n>ContactBookApplication}">
            <content>
            <Input
            width="30%"/>
            <Button
            text="{i18n>FindContact}"/>
               <Panel
               headerText="{i18n>Contacts}">
                  <content>                     
                     <Input
                     value="{/recipient/name}"
                     description="Name"
                     width="50%"/>
                     <Input
                     value="{/recipient/phone}"
                     description="Phone Number"
                     width="50%"/>
                     <Input
                     value="{/recipient/address}"
                     description="address"
                     width="50%"/>                     
                     <Input
                     value="{/recipient/city}"
                     description="City"
                     width="50%"/>                 
                   </content>                   
                </Panel>
                <Button
                     text="{i18n>Save}"
                     press="onShowHello"
                     width="25%"/>
                 <Button
                 text="{i18n>Cancel}"
                 press="onShowHello"
                 width="25%"/>  
             </content>
          </Page>
       </pages>
    </App>


   </mvc:View>
